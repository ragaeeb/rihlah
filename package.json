{
  "author": "Ragaeeb Haq",
  "name": "rihlah",
  "version": "1.0.0",
  "description": "A static web app to play classic DOS games in the browser using js-dos",
  "type": "module",
  "scripts": {
    "start": "bun run serve",
    "serve": "bunx serve -l 8080",
    "dev": "bunx serve -l 8080",
    "add-game": "bun run scripts/add-game.ts",
    "build-bundles": "bun run scripts/build-bundles.ts"
  },
  "homepage": "https://github.com/ragaeeb/rihlah",
  "keywords": [
    "dos",
    "games",
    "retro",
    "emulator",
    "js-dos",
    "dosbox"
  ],
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.7",
    "@types/bun": "^1.3.3",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ragaeeb/rihlah.git"
  },
  "engines": {
    "bun": ">=1.3.3",
    "node": ">=24.0.0"
  },
  "packageManager": "bun@1.3.3"
}
